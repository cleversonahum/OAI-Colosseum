[Unit]
Description=Iperf3 Server in the gNB for UE %i
StartLimitIntervalSec=0
StartLimitBurst=100
Requires=gnb.service

[Service]
ExecStart=docker exec -it oai-ext-dn /bin/bash -c "iperf3 -s --snd-timeout 100 --idle-timeout 5 -p 520%i --forceflush"
Restart=always
RestartSec=2s

[Install]
WantedBy=graphical.target
