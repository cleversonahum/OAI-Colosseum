[Unit]
Description=OAI gNB
StartLimitIntervalSec=infinity
StartLimitBurst=infinity
Requires=core_network.service

[Service]
WorkingDirectory=/root/OAI-Colosseum
ExecStart=/bin/bash -c "cd /root/OAI-Colosseum && source .env && python3 ran.py -t donor --rfsim"
Restart=always
RestartSec=100ms

[Install]
WantedBy=multi-user.target
