[Unit]
Description=Iperf3 client for UE
StartLimitIntervalSec=infinity
StartLimitBurst=infinity
Requires=ue.service

[Service]
EnvironmentFile=/root/OAI-Colosseum/services/env.conf
ExecStart=/bin/bash -c "iperf3 -c $GNB_IP --bind-dev oaitun_ue10 -t 0 -b 20M -R --rcv-timeout 100 -p 520$(($NODE_IDX - 1))"
Restart=always
RestartSec=1000ms

[Install]
WantedBy=multi-user.target
